@using Projeto.Restaurante.MVC.Models
@using Projeto.Restaurante.MVC.Models.Enuns
@model IEnumerable<Projeto.Restaurante.MVC.ViewModels.Mesa.ViewModelDetailsMesa>

@{
    ViewBag.Title = "Listar";
}

<div class="form-group">
    <div class="col-md-2">
        @Html.ActionLink("Novo", "Create", null, null, new { @class = "btn btn-info btn-block" })
    </div>
</div>

@if (Model.Any())
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            Listar
        </div>
        <div class="panel-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th style="width: 300px;">
                                Opções
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td>
                                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Consultar", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="3">Total: @Model.Count()</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
}
else
{
    Html.RenderPartial("~/Views/Util/AlertInline.cshtml", new Alerta("Não há itens para exibir!", TipoDeAlerta.Aviso));
}
